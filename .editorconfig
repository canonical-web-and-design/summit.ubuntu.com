# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Settings for every file type
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.html]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{css,js,json,scss}]
indent_style = space
indent_size = 2
